{
  "enabled": true,
  "name": "Documentation Sync",
  "description": "Listens to TypeScript source files and configuration changes to automatically update project documentation",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "transcript-analytics-platform/src/**/*.ts",
      "transcript-analytics-platform/src/**/*.tsx",
      "transcript-analytics-platform/*.ts",
      "transcript-analytics-platform/*.tsx",
      "transcript-analytics-platform/package.json",
      "transcript-analytics-platform/tsconfig.json",
      "transcript-analytics-platform/next.config.ts",
      "transcript-analytics-platform/components.json"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Source code or configuration files have been modified in the transcript analytics platform. Please review the changes and update the README.md file and any relevant documentation files (AUTH_SETUP.md, DATABASE_SETUP.md, DEPLOYMENT_GUIDE.md, GOOGLE_SHEETS_SETUP.md) to reflect any new features, API changes, configuration updates, or setup requirements. Ensure the documentation stays current with the codebase."
  }
}