{
  "name": "transcript-analytics-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:accessibility": "jest --testPathPattern=tests/accessibility",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "migrate": "tsx src/lib/migration/migration-cli.ts",
    "db:migrate": "tsx src/lib/migration/migration-cli.ts db:migrate",
    "db:status": "tsx src/lib/migration/migration-cli.ts db:status",
    "analyze": "ANALYZE=true npm run build",
    "benchmark": "jest --testPathPattern=tests/performance/benchmarks.test.ts --verbose",
    "perf:monitor": "jest --testPathPattern=tests/performance/performance-monitoring.test.ts --verbose",
    "perf:bundle": "jest --testPathPattern=tests/performance/bundle-optimization.test.ts --verbose",
    "integration:test": "node scripts/integration-test.js",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "node scripts/deploy.js --environment staging",
    "deploy:production": "node scripts/deploy.js --environment production",
    "deploy:dry-run": "node scripts/deploy.js --dry-run",
    "validate:deployment": "node scripts/post-deployment-validation.js",
    "lighthouse": "lhci autorun",
    "security:audit": "npm audit --audit-level=high",
    "workflow:complete": "npm run integration:test && npm run build && npm run test:e2e",
    "setup": "node scripts/setup-database.js"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^4.9.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^12.1.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "googleapis": "^155.0.0",
    "lucide-react": "^0.537.0",
    "next": "15.4.6",
    "next-auth": "^4.24.11",
    "pg": "^8.13.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.11.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/xlsx": "^0.0.35",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^1.3.5",
    "null-loader": "^4.0.1",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
